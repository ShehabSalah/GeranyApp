<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clipToPadding="true"
    android:id="@+id/button_sheet_bg"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context=".views.fragments.AddNewLocationFragment">

   <android.support.v7.widget.CardView
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginEnd="@dimen/shape_edge_x2"
       android:layout_marginStart="@dimen/shape_edge_x2"
       app:cardElevation="4dp"
       app:cardCornerRadius="3dp"
       android:layout_marginRight="32dp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginLeft="32dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="8dp"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="8dp"
       android:id="@+id/cardView"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintVertical_bias="0.074">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/rename_location_icon"
               android:layout_width="@dimen/medium_icon_size"
               android:layout_height="@dimen/medium_icon_size"
               android:layout_centerHorizontal="true"
               app:srcCompat="@drawable/ic_edit_location"
               android:layout_marginTop="@dimen/shape_edge_padding"
               />
           <TextView
               android:id="@+id/success"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/place_added"
               android:textAlignment="center"
               android:paddingTop="@dimen/shape_edge_padding"
               android:paddingRight="@dimen/shape_edge_padding"
               android:paddingLeft="@dimen/shape_edge_padding"
               android:textSize="@dimen/text_normal_size_2"
               android:textStyle="bold"
               android:layout_below="@+id/rename_location_icon"
               android:layout_marginBottom="8dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/name_your_place"
               android:textAlignment="center"

               android:paddingBottom="@dimen/shape_edge_padding"
               android:paddingRight="@dimen/shape_edge_padding"
               android:paddingLeft="@dimen/shape_edge_padding"
               android:textSize="@dimen/text_medium_size"
               android:layout_below="@+id/success"/>
       </RelativeLayout>
   </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:src="@mipmap/yes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/shape_edge_padding"
        android:layout_marginEnd="@dimen/shape_edge_x4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:id="@+id/rename_location_true" />
    <ImageView
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:src="@mipmap/close"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/shape_edge_padding"
        android:layout_marginStart="@dimen/shape_edge_x4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:id="@+id/rename_location_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.521" />

</android.support.constraint.ConstraintLayout>