<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_profile_picture"
                    android:layout_width="@dimen/post_profile_pic_size"
                    android:layout_height="@dimen/post_profile_pic_size"
                    android:src="@mipmap/profile"
                    app:civ_border_color="@color/appBackground"
                    app:civ_border_width="@dimen/post_border_size"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_pic_description"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/no_dp"
                        android:paddingTop="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <TextView
                                android:id="@+id/post_username"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@string/username"
                                android:textStyle="bold"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/text_medium_size"
                                android:paddingBottom="1dp"/>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/post_menuContainer"
                                    android:layout_width="@dimen/more_icon_width"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="@dimen/more_icon_height"
                                    android:src="@drawable/ic_expand_more"
                                    android:contentDescription="@string/more_post_menu"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/post_category"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/post_small_text_size"
                                android:maxLines="1"
                                android:layout_weight="1.7"
                                android:ellipsize="end"
                                tools:text="@string/category"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBackground"
                />
            <LinearLayout
                android:id="@+id/post_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/post_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:lineSpacingExtra="@dimen/extra_small_margin"
                    tools:text="@string/sample_post_text"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_holder"
                    android:fitsSystemWindows="false">
                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:maxHeight="@dimen/post_image_max_height"
                        android:layout_marginBottom="@dimen/extra_small_margin"
                        android:contentDescription="@string/post_image_description"/>

                </RelativeLayout>
                <TextView
                    android:id="@+id/feedback_volunteers_donations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/post_interaction_sample"
                    android:textSize="@dimen/post_small_text_size"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:paddingStart="@dimen/shape_edge_padding"
                    android:paddingEnd="@dimen/shape_edge_padding"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBackground"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/extra_small_margin"
                    android:paddingEnd="@dimen/extra_small_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:gravity="center"
                    android:id="@+id/dislike_container">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/interaction_icon_size"
                            android:layout_height="@dimen/interaction_icon_size"
                            android:src="@drawable/ic_dislike"
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_marginEnd="@dimen/no_dp"
                            android:id="@+id/hand_logo"
                            android:contentDescription="@string/dislike_description"/>
                        <TextView
                            android:id="@+id/post_dislikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dislike"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="@dimen/extra_small_margin"
                            android:paddingEnd="@dimen/extra_small_margin"
                            android:textSize="@dimen/text_extra_small_size"
                            android:layout_toEndOf="@+id/hand_logo" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appBackground"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/extra_small_margin"
                    android:paddingStart="@dimen/extra_small_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/volunteer_container">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/interaction_icon_size"
                            android:layout_height="@dimen/interaction_icon_size"
                            android:src="@drawable/ic_volunteer"
                            android:layout_marginEnd="@dimen/no_dp"
                            android:id="@+id/volunteer_logo"
                            android:contentDescription="@string/volunteer_description"/>
                        <TextView
                            android:id="@+id/post_volunteer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volunteer"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="@dimen/extra_small_margin"
                            android:paddingEnd="@dimen/extra_small_margin"
                            android:layout_marginEnd="@dimen/no_dp"
                            android:textSize="@dimen/text_extra_small_size"
                            android:layout_toEndOf="@+id/volunteer_logo" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appBackground"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/extra_small_margin"
                    android:paddingEnd="@dimen/extra_small_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/donation_container">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/interaction_icon_size"
                            android:layout_height="@dimen/interaction_icon_size"
                            android:src="@drawable/ic_money"
                            android:layout_marginEnd="@dimen/no_dp"
                            android:id="@+id/collaboration_logo"
                            android:contentDescription="@string/donation_description"/>
                        <TextView
                            android:id="@+id/post_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/donation"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="@dimen/extra_small_margin"
                            android:paddingEnd="@dimen/extra_small_margin"
                            android:textSize="@dimen/text_extra_small_size"
                            android:layout_toEndOf="@+id/collaboration_logo" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>